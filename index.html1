<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Mobilization Church Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@supabase/supabase-js@2"></script>
    <style>
        body { background: linear-gradient(135deg, #2D4E53 0%, #1a3033 100%); }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md border-t-4 border-yellow-500">
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-gray-800 tracking-tighter uppercase">Mobilization Church</h1>
            <p class="text-gray-500 text-sm">Balilihan, Bohol Portal</p>
        </div>
        <form id="loginForm" class="space-y-4">
            <input type="email" id="email" placeholder="Email Address" class="w-full p-3 border rounded-xl focus:ring-2 focus:ring-[#2D4E53] outline-none transition" required>
            <input type="password" id="password" placeholder="Password" class="w-full p-3 border rounded-xl focus:ring-2 focus:ring-[#2D4E53] outline-none transition" required>
            <button type="submit" class="w-full bg-[#2D4E53] text-white py-3 rounded-xl font-bold hover:bg-black transition shadow-lg">SIGN IN</button>
        </form>
        <p id="msg" class="text-red-500 text-xs mt-4 text-center hidden font-medium"></p>
    </div>

    <script>
        const sb = supabase.createClient('https://eejovtuputrwneovhfpc.supabase.co', 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImVlam92dHVwdXRyd25lb3ZoZnBjIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NzEyMjY5MzIsImV4cCI6MjA4NjgwMjkzMn0.JJz64gSTT9qSqOkiJvuL1PT_H_I4ZYJbchrmkoljwws');
        
        document.getElementById('loginForm').onsubmit = async (e) => {
            e.preventDefault();
            const { data, error } = await sb.auth.signInWithPassword({ email: e.target.email.value, password: e.target.password.value });
            if (error) { 
                document.getElementById('msg').innerText = error.message; 
                document.getElementById('msg').classList.remove('hidden'); 
                return; 
            }
            const { data: p } = await sb.from('profiles').select('role').eq('id', data.user.id).single();
            window.location.href = p.role === 'admin' ? 'admin.html' : 'user.html';
        };
    </script>
</body>
</html>
